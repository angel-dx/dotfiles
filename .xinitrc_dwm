#!/bin/sh

# ---------------- System Services -----------------
# Set a random wallpaper on startup
feh --bg-scale "$(find ~/Pictures/wall -type f \( -iname '*.jpg' -o -iname '*.png' \) | shuf -n 1)"

picom -b

dunst & #notification daemon

dwmblocks &

ghostty &

nm-applet &

cbatticon &

volumeicon &

# ------------ Application Services ----------------

/usr/bin/emacs --daemon &

# -------------- Window Manager --------------------

while true; do
  dwm || break
done
dwm &


